@model CompanySys.Models.Department

@using (Html.BeginForm("DepartmentForm", "Department", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
	<div class="form-row">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="col-md-4">
			@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Dept. name" } })
			@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
		</div>
		<div class="col-md-2">
			<input type="submit" value="Create" class="btn btn-block btn-secondary" />
		</div>
		<div class="col-md-8"></div>
	</div> 
       
}

